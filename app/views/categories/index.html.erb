<h1 class="text-center mt-4 mb-4" >Category Listing</h1>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>

<% @categories.each do |category| %>
  <div class="row justify-content-md-center">
      <div class="col-4">
        <div class="card card-body text-center shadow mb-5 bg-white rounded">
          <h2><%= link_to category.name, category_path(category) %></h2>
        </div>
      </div>
    </div>
<% end %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>