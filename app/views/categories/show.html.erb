<h2 class="text-center mt-4 mb-4" ><%= "Category: " + @category.name %></h2>

<div class="row justify-content-center">
  <% if logged_in? and current_user.admin? %>
    <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-outline-primary" %>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @category_articles, :container => false %>
</div>

<% @category_articles.each do |article| %>
  <div class="row justify-content-md-center">
      <div class="col-6">
        <div class="card card-body text-center shadow mb-5 bg-white rounded">
          <h2><%= link_to article.title, article_path(article) %></h2>
        </div>
      </div>
    </div>
<% end %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @category_articles, :container => false %>
</div>